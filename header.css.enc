* {box-sizing: border-box;}

body {
  margin: 0;
  font-family: Arial, Helvetica, sans-serif;
}

.header {
  overflow: hidden;
  background-color: #3377ff;
  height:85px;

}

.header a {
  float:left;
  color: black;
  text-align:center;
  padding: 0px 25px 20px 0px;
  text-decoration:none;
  font-size: 20px;
  line-height: 90px;
  border-radius: 1px;
}
.header_text_box{

  padding-left:30%;

  padding-right:10%;
}


.header a.logo {
  position: relative;
  font-size: 40px;
  font-weight: bold;
  display: block;
}
